datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String   @unique
  id        String   @id @default(cuid())
  password  String
  posts     Post[]
  roles     Json?
  updatedAt DateTime @updatedAt
  username  String?  @unique
}

model Post {
  content   String
  createdAt DateTime      @default(now())
  date      DateTime?
  id        String        @id @default(cuid())
  title     String        @unique
  updatedAt DateTime      @updatedAt
  user      User?         @relation(fields: [userId], references: [id])
  userId    String?
  weather   WeatherDatum?
}

model WeatherDatum {
  createdAt      DateTime @default(now())
  currentWeather Json?
  id             String   @id @default(cuid())
  posts          Post?    @relation(fields: [postsId], references: [id])
  postsId        String?  @unique
  updatedAt      DateTime @updatedAt
}
